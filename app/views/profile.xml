<Alloy>
	<View id="index" class="container">
		<View id="header" class="appContent">
			<Label id="myProfile" textid="myProfile"/>
			<View class="fauxShadow"/>
		</View>
		
		<Button id="logout"/>
		
		<View id="personal" class="appContent">
			<ImageView id="avatar"/>
			<Label id="name"/>
			<Label id="email"/>
			<Label id="title"/>	
			<Label id="org"/>
			<View class="fauxShadow"/>	
		</View>
		
		<View id="social" class="appContent">
			<View id="twitter" class="buttonContainer">
				<ImageView id="twitterIcon"/>
				<Label id="twitterText" class="buttonText" textid="connectTwitter"/>
			</View>
			<View class="divider"/>
			<View id="facebook" class="buttonContainer">
				<ImageView id="facebookIcon"/>
				<Label id="facebookText" class="buttonText" textid="connectFacebook"/>
			</View>
			<View class="fauxShadow"/>
		</View>
		
	</View>
</Alloy>