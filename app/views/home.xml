<Alloy>
	<View id="index" class="container">
		<View id="dashboard" formFactor="handheld">
			<View id="now">
				<Label id="title" text="Morning Keynote"/>
				<Label id="presenter" text="Jeff Haynie, CEO, Appcelerator"/>
				<Label id="location" text="Grand Ballroom"/>
			</View>

			<View id="stream">
				<TableView id="streamTable"/>
			</View>
		</View>
		
		<View id="tabletDash" formFactor="tablet">
			<View id="nowContainer">
				<!-- Code duplication, should widgetize -->
				<View id="now">
					<Label id="title" text="Morning Keynote"/>
					<Label id="presenter" text="Jeff Haynie, CEO, Appcelerator"/>
					<Label id="location" text="Grand Ballroom"/>
				</View>
				
				<View id="agendaPeek" class="appContent">
					<Label id="agendaHeader" class="blueHeader" textid="sunday"/>
					<TableView id="dailySchedule"/>
					<View class="fauxShadow"/>
				</View>
			</View>
			
			<View id="streamContainer">
				<View id="streamPeek">
					<View id="streamHeader" class="appContent">
						<Label id="headerLabel" textid="activityStream"/>
						<View class="fauxShadow"/>
					</View>
					<TableView id="streamTable"/>
				</View>
			</View>
			
		</View>
		
		<View id="sponsorsContainer" formFactor="tablet">
				<Label id="sponsorHeader" textid="sponsorHeader"/>
				<View id="sponsorBox" class="appContent">
					<ScrollView scrollType="horizontal">
						<View id="horizontalContainer">
							<View class="spacer"/>
							<ImageView image="/img/home/sponsors/redhat.png" height="28" width="156dp"/>
							<View class="spacer"/>
							<ImageView image="/img/home/sponsors/denso.png" width="76dp" height="28dp"/>
							<View class="spacer"/>
							<ImageView image="/img/home/sponsors/box.png" width="42dp" height="30dp"/>
							<View class="spacer"/>
							<ImageView image="/img/home/sponsors/utest.png" width="65dp" height="26dp"/>
							<View class="spacer"/>
							<ImageView image="/img/home/sponsors/venturebeat.png" width="136dp" height="26dp"/>
							<View class="spacer"/>
							<ImageView image="/img/home/sponsors/challengepost.png" width="116dp" height="33dp"/>
							<View class="spacer"/>
							<ImageView image="/img/home/sponsors/centrify.png" width="95dp" height="33dp"/>
							<View class="spacer"/>
						</View>
					</ScrollView>
					<View class="fauxShadow"/>
				</View>
			</View>
	</View>
</Alloy>